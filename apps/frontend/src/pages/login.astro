---
import LoginForm from "@/components/LoginForm";
import AppLayout from "@/layouts/AppLayout.astro";

---
<AppLayout title="Login">
  <div class="h-screen w-full flex justify-center items-center ">
    <div class="w-full max-w-md p-8 space-y-6 bg-white">
      <h2 class="text-2xl font-bold text-center text-gray-800">Login to Your Account</h2>
      <LoginForm client:load />
      <p class="text-sm text-center text-gray-600">
        Don't have an account? <a href="/register" class="text-orange-400 hover:underline">Sign up</a>
      </p>
    </div>
  </div>
</AppLayout>