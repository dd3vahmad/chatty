---
import AppLayout from "@/layouts/AppLayout.astro";
import { Button } from "@/components/starwind/button"
import { Icon } from "astro-icon/components"
---

<AppLayout title="Welcome">
  <div class="h-screen flex justify-center items-center bg-orange-100">
    <div class="flex flex-col justify-between py-10 items-center lg:w-[700px] lg:h-[570px] bg-background rounded">
      <div class="w-fit relative mt-6">
        <img class="w-[200px]" src="/chat.png" alt="Chat background" />
        <img class="w-[120px] absolute top-10 left-10" src="https://api.dicebear.com/9.x/adventurer/svg?seed=Emery" alt="Smiling Avatar" />
      </div>

      <div class="flex flex-col justify-center items-center w-full border">
        <Icon name={"logo"} />
        <h1 class="text-4xl font-bold text-center">Welcome to Chatty!</h1>
        <p class="text-gray-500 text-sm w-[70%] text-center mx-auto mt-5">Chatty supports sending and receiving a variety of media: text, photos, videos and documents</p>
      </div>
      <div class="flex flex-col justify-center items-center w-full">
        <Button class:list={["bg-orange-500 shadow-xl shadow-orange-100 text-xs font-bold rounded px-16 py-6 hover:bg-orange-500 hover:opacity-95"]}>Let's Get Started</Button>
        <p class="text-gray-600 text-sm mt-4">Already have an account? <a href="/login" class="text-orange-500 hover:underline">Login</a></p>
      </div>
    </div>
  </div>
</AppLayout>